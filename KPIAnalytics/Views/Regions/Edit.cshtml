@model Entities.Region
<form id="formEdit" action="/Regions/Edit" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-group">
            <label for="Module" class="col-md-2 control-label">Region Id</label>
            <div class="col-md-10">
                <input type="text" id="RegionId" name="RegionId" class="form-control" value="@Model.RegionId" readonly>
            </div>
            <label for="Controller" class="col-md-2 control-label"> Name</label>
            <div class="col-md-10">
                <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name">
            </div>
            <label for="Action" class="col-md-2 control-label">Code</label>
            <div class="col-md-10">
                <input type="text" id="Code" name="Code" class="form-control" value="@Model.Code">
            </div>
            
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <button type="reset" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="submitEdit" class="btn btn-primary">Submit</button>
            </div>
        </div>
        <input type="hidden" name="RegionId" class="form-control" id="RegionId" value="@Model.RegionId" required />
        <div class="alert alert-danger" id="error-display"></div>
    </fieldset>
</form>

    