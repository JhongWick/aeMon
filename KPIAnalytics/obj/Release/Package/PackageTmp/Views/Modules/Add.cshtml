<form id="formAdd" action="/Modules/Add" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-group">
            <label for="Module" class="col-md-2 control-label">Module</label>
            <div class="col-md-10">
                <input id="name" type="text" name="Name" class="form-control" placeholder="Module">
            </div>
            <label for="Controller" class="col-md-2 control-label">Controller</label>
            <div class="col-md-10">
                <input id="moduleController" type="text" name="ModuleController" class="form-control" placeholder="Controller">
            </div>
            <label for="Action" class="col-md-2 control-label">Action</label>
            <div class="col-md-10">
                <input id="moduleAction" type="text" name="ModuleAction" class="form-control" placeholder="Action">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <button type="reset" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="submitAdd" class="btn btn-primary">Save</button>
            </div>
        </div>
        <div class="alert alert-danger" id="error-display"></div>
    </fieldset>
</form>
