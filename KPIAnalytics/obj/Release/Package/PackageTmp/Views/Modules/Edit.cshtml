@model Entities.Module
<form id="formEdit" action="/Modules/Edit" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-group">
            <label for="Module" class="col-md-2 control-label">Module</label>
            <div class="col-md-10">
                <input type="text" id="name" name="Name" class="form-control" value="@Model.Name">
            </div>
            <label for="Controller" class="col-md-2 control-label">Controller</label>
            <div class="col-md-10">
                <input type="text" id="moduleController" name="ModuleController" class="form-control" value="@Model.ModuleController">
            </div>
            <label for="Action" class="col-md-2 control-label">Action</label>
            <div class="col-md-10">
                <input type="text" id="moduleAction" name="ModuleAction" class="form-control" value="@Model.ModuleAction">
            </div>
            <label for="Delete" class="col-md-2 control-label">Delete</label>
            <div class="col-md-10" style="margin-top: 7px">
                <input onclick="isModuleDeleted()" id="isDeleted" @if (Model.IsDeleted) { <text> checked</text> }
                       value="@if (Model.IsDeleted) { <text>true</text> } else { <text>false</text> } "
                       class="form-group-sm text-left" type="checkbox" name="IsDeleted" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <button type="reset" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="submitEdit" class="btn btn-primary">Submit</button>
            </div>
        </div>
        <input type="hidden" name="ModuleId" class="form-control" id="ModuleId" value="@Model.ModuleId" required />
        <div class="alert alert-danger" id="error-display"></div>
    </fieldset>
</form>

