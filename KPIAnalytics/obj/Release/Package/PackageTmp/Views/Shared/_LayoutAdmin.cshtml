@using DataAccessLayer;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>COCO Analytics @ViewBag.Title</title>
    <link href="~/vendor/metisMenu/metisMenu.min.css" rel="stylesheet" />
    <link href="~/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link href="~/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/bower_components/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link href="~/dist/css/skins/_all-skins.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    
    <!-- Morris chart -->
    <link href="~/bower_components/morris.js/morris.css" rel="stylesheet" />
    <!-- jvectormap -->
    <link href="~/bower_components/jvectormap/jquery-jvectormap.css" rel="stylesheet" />
    <!-- Date Picker -->
    <link href="~/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <!-- Daterange picker -->
    <link href="~/bower_components/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!-- bootstrap wysihtml5 - text editor -->
    <link href="~/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">


    <style type="text/css">
        .modal {
            background: none !important;
        }

        .modal-open .modal {
            overflow-y: hidden !important;
        }
    </style>


</head>

<body class="hold-transition skin-yellow sidebar-mini" style="background-color:#222d32 !important;">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <div class="float-left" style="">
                    <a href="@Url.Action("Dashboard","Home")" class="logo">
                        <!-- mini logo for sidebar mini 50x50 pixels -->
                        <span class="logo-mini"><b>CCA</b></span>
                        <!-- logo for regular state and mobile devices -->
                        <span class="logo-lg"><b>COCO</b>Analytics</span>
                    </a>
                </div>

                <div class="navbar-custom-menu">
                    @if (Authentication.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Home", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            <ul class="nav navbar-nav">

                                <!-- User Account: style can be found in dropdown.less -->
                                <li class="dropdown user user-menu" style="margin-right:15px!important;">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="fa fa-user-circle fa-2x user-image" alt="User Image"></i>
                                        @*<img src="~/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">*@
                                        <span class="hidden-xs">@Authentication.CurrentUser.FirstName @Authentication.CurrentUser.LastName</span>
                                    </a>
                                    <ul class="dropdown-menu" role="menu" style="width:100px !important;">
                                        <li class="">
                                        </li>
                                        <li class="" style="padding:5px !important;">
                                            <a href="@Url.Action("UserProfile","User", new { id = @Authentication.CurrentUser.UserId })" class=""><i class="fa fa-user-circle"></i>&nbsp;&nbsp;Profile</a>
                                        </li>

                                        <li class="" style="padding:5px !important;">
                                            <a href="javascript:document.getElementById('logoutForm').submit()" class=""><i class="fa fa-power-off"></i>&nbsp;&nbsp;Sign out</a>
                                        </li>
                                    </ul>
                                </li>
                                <!-- Control Sidebar Toggle Button -->
                                @*<li>
                                        <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                                    </li>*@
                            </ul>
                        }
                    }
                    else
                    {

                        Response.Redirect(Url.Action("Login"));
                    }
                </div>

            </nav>
        </header>

        <aside class="main-sidebar" style="padding-top: 0px;">

            <section class="sidebar">

                <div class="ImagePreviewBox " style="padding: 20px !important;">
                    <img src="~/Images/HVCDP_2.png" class="" alt="DA Logo" style="height:160px;">
                </div>

                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">MAIN MENU</li>

                    <li>
                        <a href="@Url.Action("Index","KPIs")">
                            <i class="fa fa-key"></i> <span>Key Performance Indicators</span>

                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Farms")">
                            <i class="fa fa-tree"></i> <span>Farms</span>

                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Targets")">
                            <i class="fa fa-bullseye"></i> <span>KPI Targets</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Reports")">
                            <i class="fa fa-clipboard"></i> <span>Reports</span>
                        </a>
                    </li>

                    @{
                        var role = UserRoleData.GetByUserId(Authentication.CurrentUser.UserId).RoleId;
                    }
                    @if (role == 1 || role == 2)
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-users"></i>
                                <span>User Management</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="@Url.Action("Index", "User")"><i class="fa fa-circle-o"></i> User</a></li>
                                <li><a href="@Url.Action("Index", "Role")"><i class="fa fa-circle-o"></i> Role</a></li>
                                <li><a href="@Url.Action("Update", "RoleDetails")"><i class="fa fa-circle-o"></i> RoleDetails</a></li>
                                <li><a href="@Url.Action("Update", "UserRights")"><i class="fa fa-circle-o"></i> UserRights</a></li>
                                <li><a href="@Url.Action("Index", "Modules")"><i class="fa fa-circle-o"></i> Module</a></li>
                            </ul>
                        </li>
                    }



                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">

                @{
                    var controller = this.ViewContext.RouteData.Values["controller"].ToString();
                }
                @if (controller == "Home")
                {
                    <h1>
                        Admin
                        <small>Control panel</small>
                    </h1>

                }
                else
                {
                    @controller
                    <small>Control panel</small>
                }



                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Admin</a></li>
                    <li>@controller</li>
                    <li class="active">@ViewBag.Title</li>
                </ol>
            </section>
            <!-- Main content -->
            <section class="content" style="overflow:hidden;position: relative;">

                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.container -->
    </div>
    <!-- /.content-wrapper -->
